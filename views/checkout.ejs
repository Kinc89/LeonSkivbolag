<%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>

    <h1 class="formH">Checkout page</h1>
    <br />
    <!-- here will be user cart -->
    <p class="formH"><%= user %></p>

    <% if (user.status == "user") { %>
        <div class="checkoutContainer">
            <% user.cart.forEach(album=> { %>

            <div class="item">

                <div class="yourCart">
                    <i><%= album.name %></i><br>
                    <b><%= album.artist %></b><br>
                </div>
            </div>
            <% }); %>
        </div>
    <% } %>
    <h3> total price</h3>

    <!-- input form for user info -->
    <!-- payment methods -->
    <form action="/confirmation">
        <h3 class="formH">Billing Address</h3>
        <div class="formContainer">
            <div class="formName formControl">
                <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                <input type="text" id="fname" name="firstname" placeholder="John M. Doe">
            </div>
            <div class="formEmail formControl">
                <label for="email"><i class="fa fa-envelope"></i> Email</label>
                <input type="text" id="email" name="email" placeholder="john@example.com">
            </div>
            <div class="formAdress formControl">
                <label for="adr"><i class="fa fa-address-card-o"></i> Address</label>
                <input type="text" id="adr" name="address" placeholder="542 W. 15th Street">
            </div>
            <div class="formCity formControl">
                <label for="city"><i class="fa fa-institution"></i> City</label>
                <input type="text" id="city" name="city" placeholder="New York">
            </div>
            <div class="formState formControl">
                <label for="state">State</label>
                <input type="text" id="state" name="state" placeholder="NY">
            </div>
            <div class="formZip formControl">
                <label for="zip">Zip</label>
                <input type="text" id="zip" name="zip" placeholder="10001">
            </div>
        </div>
        <h3 class="formH">Payment</h3>
        <div class="formContainer">
            <div class="formCards formControl">
                <label for="fname">Accepted Cards</label>
                <div class="icon-container">
                    <i class="fab fa-cc-visa" style="color:navy;"></i>
                    <i class="fab fa-cc-amex" style="color:blue;"></i>
                    <i class="fab fa-cc-mastercard" style="color:red;"></i>
                    <i class="fab fa-cc-discover" style="color:orange;"></i>
                </div>
            </div>
            <div class="formCardname formControl">
                <label for="cname">Name on Card</label>
                <input type="text" id="cname" name="cardname" placeholder="John More Doe">
            </div>
            <div class="formCardnumber formControl">
                <label for="ccnum">Credit card number</label>
                <input type="text" id="ccnum" name="cardnumber" placeholder="1111-2222-3333-4444">
            </div>
            <div class="formCardmonth formControl">
                <label for="expmonth">Exp Month</label>
                <input type="text" id="expmonth" name="expmonth" placeholder="September">
            </div>
            <div class="formCardexp formControl">
                <label for="expyear">Exp Year</label>
                <input type="text" id="expyear" name="expyear" placeholder="2018">
            </div>
            <div class="formCvv formControl">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="352">
            </div>
        </div>
    </form>


    <form action="/confirmation" method="get" class="checkoutBtnForm">
        <!-- Vilken submitväg ska användas? //Leon -->
        <!-- <input type="submit" value="Continue to checkout" class="btn"> -->
        <button type="submit" class="checkoutBtn">Confirm payment</button>
    </form>

</body>

</html>