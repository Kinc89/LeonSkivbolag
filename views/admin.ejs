<%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>

    <h1>Admin page</h1>
    
    <form action="/admin" method="POST" id="post-album-form">
        <input type="text" name="url" id="urlLastFm" placeholder="Copy URL from Last.fm" autofocus required size="60" />
        <button type="submit">Post album</button>
    </form>
    <br />

    <% if (error) { %>
    <p>We can't handle your request, please choose another album without the following characters: "â€¦".</p>
    <% } %>

    <% if (invalidAlbum) { %>
    <p>The data from Last.fm about the album '<%= data.album.name %>' by artist <i><%= data.album.artist %></i> doesn't
        contain enough information to be added to Skivbolaget.</p>
    <% } %>

    <% if (albumAdded) { %>
    <p>The data from Last.fm about the album '<%= newAlbumInDb.name %>' by artist <i><%= newAlbumInDb.artist %></i> has
        been successfully added to Skivbolaget.</p>
    <% } %>

    <% if (existingAlbum) { %>
    <p>The album '<%= data.album.name %>' by artist <i><%= data.album.artist %></i> already exists in the collection of
        Skivbolaget.</p>
    <% } %>

    <br />
    <ul>
    <% user.adminAlbums.forEach(album => { %>
            <li><em><%= album.name %></em> by <%= album.artist %> // &nbsp;<span class="removeAdminAlbum" style="font-size: smaller"><a href="/removeadminalbum/<%= album._id %>">DELETE THIS ALBUM FROM YOUR COLLECTION</a></span></li>
    <% }) %>
    </ul>


    <p><a href="/logout" style="color: lightcoral">Log out</a></p>

</body>

</html>