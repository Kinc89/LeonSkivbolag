<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skivbolaget</title>
    <link rel="stylesheet" href="css/index.css">
    <!-- <link rel="stylesheet" href="css/temp.css"> -->
    <script src="https://kit.fontawesome.com/5fc0d582b6.js" crossorigin="anonymous"></script>
</head>

<body>
    
    <header>
        <div id="menu collapse"><i class="fas fa-bars fa-lg"></i></div>
        <div id="logo-container"><img id="logo-small" src="/img/logo.png" alt="Skivbolaget logo"></div>
        <div id="user"><i class="far fa-user fa-lg"></i></div>
        <div id="shoppingcart"><i class="fas fa-compact-disc fa-lg"></i></div>
    </header>
    <div class="sortContainer">
        <div class="filter">filter</div>
        <div class="sort">sort</div>
    </div>
    <div class="container">
        <% albums.forEach((album) => { %>
        <div class="item">            
            <div class="image">
                <a href="/album/<%= album._id %>">
                    <img src="<%= album.imgUrl %>" alt="Image of '<%= album.name %>' by <%= album.artist %>" />
                </a>
            </div>
            <div class="artist"><%= album.artist %></div>
            <div class="album"><%= album.name %></div>
            <div class="year"><%= album.released %></div>
            <div class="genre"><%= album.genre %></div>
        
        </div>
        <% }) %>
    </div>
</body>

</body>

</html>